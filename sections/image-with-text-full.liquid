<div class="wide-bg {% if section.settings.use_alt_bg %}use-alt-bg{% endif %}" style="background-color:{{ section.settings.section_bg | escape }};" data-section-type="video" >
  <div class="">
    <div class="flexible-layout valign-middle">
      <div class="column column--half {% if section.settings.video == blank %}no-btm-margin{% endif %} {% if section.settings.image_position == 'right' %}column--order-push-desktop{% endif %}">
        {% if section.settings.button_link != blank %}<a class="block-link" href="{{ section.settings.button_link }}">{% endif %}
          <div class="full-img">
          
              {%- if section.settings.image != blank -%}
              
          
               <img src="{{ section.settings.image | image_url  }}">
              {%- endif -%}
            </div>


              {% if section.settings.video != blank %}
            <div class="video-container image-overlay image-overlay--bg-no_background"
            data-video-url="{{ section.settings.video | escape }}"
            data-video-autoplay="{% if section.settings.autoplay %}true{% else %}false{% endif %}"
            data-video-loop="true"
            data-cc-animate>
            <div class="video-container__video"></div>

            {% unless section.settings.autoplay %}
              <div class="video-container__cover">
                {%- if section.settings.placeholder_image == blank -%}
                  <div class="placeholder-image placeholder--banner dark">
                    {{- 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' -}}
                  </div>
                {%- else -%}
                  <div class="rimage-outer-wrapper rimage-background lazyload fade-in"
                      data-bgset="{% render 'bgset', image: section.settings.placeholder_image %}"
                      data-sizes="auto"
                      data-parent-fit="cover">
                    <noscript>
                      <div class="rimage-wrapper" style="padding-top:{{ 1 | divided_by: section.settings.placeholder_image.aspect_ratio | times: 100 }}%">
                        <img src="{{ section.settings.placeholder_image | img_url: '1024x1024' }}" alt="{{ section.settings.placeholder_image.alt | escape }}" class="rimage__image">
                      </div>
                    </noscript>
                  </div>
                {%- endif -%}
              </div>
              <div class="overlay-text overlay-text--for-banner overlay--v-center overlay--h-center image-overlay__over">
                <div class="overlay-text__inner">
                  <div class="overlay-text__text">
                    <a href="#" class="video-container__play" aria-label="{{ 'general.accessibility_labels.video_play' | t | escape }}">{% render 'svg-play' %}</a>
                  </div>
                </div>
              </div>

            {% elsif section.settings.placeholder_image %}
              <div class="video-container__fallback rimage-outer-wrapper rimage-background lazyload fade-in"
                data-bgset="{% render 'bgset', image: section.settings.placeholder_image %}"
                data-sizes="auto"
                data-parent-fit="cover">
                <noscript>
                  <div class="rimage-wrapper" style="padding-top:{{ 1 | divided_by: section.settings.placeholder_image.aspect_ratio | times: 100 }}%">
                    <img src="{{ section.settings.placeholder_image | img_url: '1024x1024' }}" alt="{{ section.settings.placeholder_image.alt | escape }}" class="rimage__image">
                  </div>
                </noscript>
              </div>
            {% endunless %}
            
          </div>
        {% endif %}

            
   
        {% if section.settings.button_link != blank %}</a>{% endif %}
      </div>

      <div class="column no-btm-margin column--half align-{{ section.settings.text_alignment }}" data-cc-animate>
        <div class="feature-text-paired">
          {%- if section.settings.subheading != blank -%}
            <div class="subheading subheading--over">{{ section.settings.subheading | escape }}</div>
          {%- endif -%}

          {% if section.settings.title != blank %}
            {% if section.settings.use_h1 %}
              <h1  style="font-size:{{ section.settings.font_size | escape }}px; " class="majortitle in-content">{{ section.settings.title | escape }}</h1>
            {% else %}
              <h2  style="font-size:{{ section.settings.font_size | escape }}px; " class="majortitle in-content h1-style">{{ section.settings.title | escape }}</h2>
            {% endif %}
          
          
          {% endif %}
          
         

          <div class="rte">{{ section.settings.text }}</div>
          
          

          {% if section.settings.button_label != blank %}
            <div class="lightly-spaced-row-above">
              <a class="{% if section.settings.button_style != 'link' %}btn btn--{{ section.settings.button_style }}{% else %}small-feature-link{% endif %}" href="{{ section.settings.button_link }}">{{ section.settings.button_label | escape }}</a>
            </div>
          {% endif %}
          
             {% if section.settings.logo != blank %}
          <div class="press-logo">
          <img style="width:{{ section.settings.image_size | escape }}px; " src="{{ section.settings.logo | image_url }}">
          </div>
          
           {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Image with text full",
    "class": "section-image-with-text",
    "settings": [
	{
        "type": "color",
        "id": "section_bg",
        "label": "Background Colour",
        "default": "#acb8aa"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },

     {
        "id": "video",
        "type": "text",
        "label": "Video link",
        "info": "Supports mp4, YouTube and Vimeo. Please read documentation before using. [Read more](https://cleancanvas.co.uk/support/general/background-video)"
      },
      {
        "type": "checkbox",
        "id": "autoplay",
        "label": "Autoplay",
        "default": false
      },
      {
        "id": "placeholder_image",
        "type": "image_picker",
        "label": "Video Placeholder image",
        "info": "Required. Shows while the video is loading, or if it cannot autoplay."
      },

      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Image with text"
      },

{
     "type": "font_picker",
     "id": "header_font_new",
     "label": "Heading Font",
     "default": "work_sans_n6"
   },

  {
        "type": "range",
        "id": "font_size",
        "min": 10,
        "max": 72,
        "step": 1,
        "unit": "px",
        "label": "Size",
        "default": 30
      },
 
  

 		{
        "type": "image_picker",
        "id": "logo",
        "label": "Logo Image"
      },

 {
        "type": "range",
        "id": "image_size",
        "min": 100,
        "max": 400,
        "step": 10,
        "unit": "px",
        "label": "Logo Size",
        "default": 150
      },


          {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Pair text with an image to give customers insight into your brand. Tell a story, explain a product detail, or describe a new promotion.<\/p>"
      },
	    {
        "type": "text",
        "id": "button_label",
        "label": "Button text",
        "default": "Read more"
      },
           {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
       {
        "type": "select",
        "id": "button_style",
        "label": "Button style",
        "default": "primary",
        "options": [
          {
            "label": "Button - primary",
            "value": "primary"
          },
          {
            "label": "Button - secondary",
            "value": "secondary"
          },
          {
            "label": "Link",
            "value": "link"
          }
        ]
      },
     
      {
        "type": "select",
        "id": "image_position",
        "label": "Image alignment",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text alignment",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      }
      
    ],
    "presets": [
      {
        "name": "Image with text full",
        "settings": {}
      }
    ]
  }
{% endschema %}
