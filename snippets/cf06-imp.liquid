{% if settings.enable_cf06 %}
<style>
  html body .cf_06 .top-content-text span {
  	font-family: 'Riposte Light', serif;
  	font-size: 30px;
  	letter-spacing: 0;
      line-height: 1.3;
  	color: #394f3d;
  	font-weight: bold;
    text-transform: uppercase;
  }
  html body .curved-text {
    height: 50px;
    text-transform: uppercase;
  }
  html body .cf_06 .curved-text svg {
      width: 100%;
      height: auto;
  }
  html body .cf_06 .curved-text path {
      fill: transparent;
  }
  html body .cf_06 .curved-text text {
      fill: #394f3d;
      font-size: 62px;
      font-weight: bold;
      letter-spacing: 2px;
  }
  html body .cf_06 .curved-text .cf-safari-text-space {
      letter-spacing: 0;
  }
  
  html body .cf_06 .top-content-cta  {
  	font-family: 'Riposte Light', serif;
  	font-size: 15px;
  	font-weight: bold;
  	letter-spacing: 1px;
  	color: #394f3d;
  	padding: 10px 20px;
  	border: 1px solid #394f3d;
  	border-radius: 2px;
  	margin: 10px 0 20px;
  	display: inline-block;
  }
  
  html body .cf_06 .top-content-cta:hover {
  	background: #394f3d;
  	color: #fff;
  }
  
  html body .cf_06 .review-wrap img {
  	max-width: 105px;
  	width: 100%;
  	margin: 0 auto 5px;
  }
  
  html body .cf_06 .review-wrap .review-text {
  	font-family: "Riposte Light", sans-serif;
  	font-size: 12px;
  	font-weight: 300;
  	font-stretch: normal;
  	font-style: normal;
  	line-height: normal;
  	letter-spacing: normal;
  	text-align: center;
  	color: #394f3d;
  	margin-bottom: 5px;
  }
  
  html body .cf_06 .review-wrap .review-name {
  	font-family: "Riposte Light", sans-serif;
  	font-size: 12px;
  	font-weight: 300;
  	font-stretch: normal;
  	font-style: normal;
  	line-height: normal;
  	letter-spacing: normal;
  	text-align: center;
  	color: #374735;
  }
  html body .overlay--h-left .cf_06 .hero-content {
    margin-right: auto;
  }
  html body .overlay--h-center .cf_06 .hero-content {
    margin: 0 auto;
  }
  html body .overlay--h-right .cf_06 .hero-content {
    margin-left: auto;
  }
  
  @media(min-width: 768px) {
    	
    html body .cf_06 .hero-content {
        max-width: 275px;
        text-align: center;
    }
    	
    html body .cf_06 .top-content-wrap {
        display: block;
    }
    	
    html body .cf_06 .review-wrap .review-text {
        font-size: 14px;
    }
  }
  
  @media(min-width: 1700px) {
    	
    html body .cf_06 .hero-content {
          max-width: 320px;
      }
    	
    html body .cf_06 .top-content-text span {
        font-size: 35px;
    }
    	
    html body .cf_06 .top-content-cta {
        font-size: 20px;
    }
    	
    html body .cf_06 .review-wrap .review-text {
        font-size: 18px;
    }
    	
    html body .cf_06 .review-wrap .review-name {
        font-size: 16px;
    }
  }
  
  @media(min-width: 2560px) {
    	
    html body .cf_06 .hero-content {
    		max-width: 380px;
    	}
    	
    html body .cf_06 .top-content-text span {
        font-size: 40px;
    }
    	
    html body .cf_06 .top-content-cta {
        font-size: 25px;
    }
    	
    html body .cf_06 .review-wrap .review-text {
        font-size: 22px;
    }
    	
    html body .cf_06 .review-wrap .review-name {
        font-size: 20px;
    }
  }
  @media only screen and (max-width: 767px) {
    html body .top-content-wrap {
        display: none;
    }
    html body .cf_06 .top-content-cta {
        display: none;
    }
     html body ul.slick-dots {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var isSafari = /^((?!chrome|android).)*safari/i.test(navigator.userAgent);
    if (isSafari) {
      document.querySelector('.curved-text text').classList.add('cf-safari-text-space');
    }
  });
</script>
{% endif %}